<html>
	<head>
		<title>Welcome to NP Finder</title>
		<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
		<link href="https://fonts.googleapis.com/css?family=Anton|Slabo+27px" rel="stylesheet">
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/css/bootstrap-select.min.css">

<!-- Latest compiled and minified JavaScript -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/js/bootstrap-select.min.js"></script>
		<style>
		#index_bng{
			width: 100%;
			height: 95%;
			background: url('../Bryce_as_index.jpg');
			background-size: 100% 100%;
			display: block;
			text-align: center;
		}
		#search{
			width:50%;
			height:180px;
			top:550px;
			left:25%;
			background-color: rgba(128,128,128,0.5);
			position: relative;
			border-radius: 10px;
		}
		h1{
			margin-top: 0;
		}
		.form-control{
			width:150px;
		}
		</style>
	</head>
	<body>
		<% include ../views/layout %>
		<div id = 'index_bng'>
			<h1 style="font-family: 'Slabo 27px', serif;color:white;top:450px;font-size: 70px;position: absolute;width:100%">Welcome to National Park Finder!</h1>
			<div id = 'search'>
				<div class='container' style="position: relative;width:initial;">
					<h2 style="font-family: 'Slabo 27px', serif;color:white">Find park by</h2>
					<form action="/search_index" method="get">
						<select name="state" class="form-control" style="left:150px;position: relative;float:left">
							<option selected="selected" value="">--By State</option>
							<% for(var i = 0;i<states.length;i++){%>
								<option value=<%= states[i].name%>><%= states[i].name%></option>
							<% } %>
						</select>
						<select name="activity" class="form-control" style="right:150px;position: relative;float: right;">
							<option selected="selected" value="">--By activity--</option>
							<% for(var i = 0;i<activities.length;i++){%>
								<option value=<%= activities[i].activity_id%>><%= activities[i].activity_name%></option>
							<% } %>
						</select>
						<input class="btn btn-info" style="width:200px;height:40px;top: 50px;position: relative;" type="submit" value="Search">
					</form>
				</div>
			</div>
		</div>
	</body>
</html>